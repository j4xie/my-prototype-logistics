# Next.js Environment Variables
# Copy this file to .env.local and update the values

# Application Configuration
NEXT_PUBLIC_APP_NAME="食品溯源系统"
NEXT_PUBLIC_APP_VERSION="3.0.0"
NEXT_PUBLIC_APP_ENV="development"

# API Configuration
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000/api"
NEXT_PUBLIC_API_TIMEOUT="10000"

# Mock API Configuration (统一架构)
NEXT_PUBLIC_MOCK_ENABLED="false"
NEXT_PUBLIC_MOCK_ENVIRONMENT="development"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Database (if needed)
DATABASE_URL="postgresql://username:password@localhost:5432/food_trace"

# External Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
NEXT_PUBLIC_ANALYTICS_ID="your-analytics-id"

# Feature Flags
NEXT_PUBLIC_ENABLE_DARK_MODE="true"
NEXT_PUBLIC_ENABLE_OFFLINE_MODE="true"
NEXT_PUBLIC_ENABLE_PWA="true"
NEXT_PUBLIC_ENABLE_TRACE_VERIFICATION="true"
NEXT_PUBLIC_ENABLE_USER_PROFILES="true"
NEXT_PUBLIC_ENABLE_FILE_UPLOAD="false"
NEXT_PUBLIC_ENABLE_NOTIFICATIONS="false"

# Development
NEXT_PUBLIC_DEBUG="false"

# Performance
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_ENABLE_ERROR_REPORTING="false"
