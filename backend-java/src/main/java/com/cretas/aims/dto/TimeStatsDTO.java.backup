package com.cretas.aims.dto;

import io.swagger.annotations.ApiModel;
import io.swagger.annotations.ApiModelProperty;
import lombok.*;

import java.math.BigDecimal;
import java.time.LocalDate;
import java.util.List;
import java.util.Map;

/**
 * 时间统计DTO
 *
 * @author Cretas Team
 * @version 1.0.0
 * @since 2025-01-09
 */
@Data
@NoArgsConstructor
@AllArgsConstructor
@Builder
@ApiModel(description = "时间统计信息")
public class TimeStatsDTO {

    @ApiModelProperty(value = "统计周期", example = "daily")
    private String period;

    @ApiModelProperty(value = "开始日期")
    private LocalDate startDate;

    @ApiModelProperty(value = "结束日期")
    private LocalDate endDate;

    @ApiModelProperty(value = "总工时", example = "240.5")
    private BigDecimal totalHours;

    @ApiModelProperty(value = "正常工时", example = "200")
    private BigDecimal regularHours;

    @ApiModelProperty(value = "加班工时", example = "40.5")
    private BigDecimal overtimeHours;

    @ApiModelProperty(value = "活跃员工数", example = "25")
    private Integer activeWorkers;

    @ApiModelProperty(value = "总打卡次数", example = "100")
    private Long totalClockIns;

    @ApiModelProperty(value = "迟到次数", example = "5")
    private Long lateCount;

    @ApiModelProperty(value = "早退次数", example = "3")
    private Long earlyLeaveCount;

    @ApiModelProperty(value = "缺勤次数", example = "2")
    private Long absentCount;

    @ApiModelProperty(value = "平均工时", example = "8.5")
    private BigDecimal averageHours;

    @ApiModelProperty(value = "出勤率", example = "95.5")
    private BigDecimal attendanceRate;

    @ApiModelProperty(value = "生产效率", example = "89.3")
    private BigDecimal productivity;

    @ApiModelProperty(value = "按部门统计")
    private Map<String, DepartmentStats> departmentStats;

    @ApiModelProperty(value = "按工作类型统计")
    private Map<String, WorkTypeStats> workTypeStats;

    @ApiModelProperty(value = "日统计列表")
    private List<DailyStats> dailyStatsList;

    /**
     * 部门统计
     */
    @Data
    @NoArgsConstructor
    @AllArgsConstructor
    @Builder
    public static class DepartmentStats {
        @ApiModelProperty(value = "部门名称", example = "生产部")
        private String departmentName;

        @ApiModelProperty(value = "总工时", example = "120.5")
        private BigDecimal totalHours;

        @ApiModelProperty(value = "员工数", example = "10")
        private Integer workerCount;

        @ApiModelProperty(value = "平均工时", example = "12.05")
        private BigDecimal averageHours;

        @ApiModelProperty(value = "加班工时", example = "20.5")
        private BigDecimal overtimeHours;

        @ApiModelProperty(value = "出勤率", example = "96.5")
        private BigDecimal attendanceRate;
    }

    /**
     * 工作类型统计
     */
    @Data
    @NoArgsConstructor
    @AllArgsConstructor
    @Builder
    public static class WorkTypeStats {
        @ApiModelProperty(value = "工作类型ID", example = "1")
        private Integer workTypeId;

        @ApiModelProperty(value = "工作类型名称", example = "播种")
        private String workTypeName;

        @ApiModelProperty(value = "总工时", example = "80.5")
        private BigDecimal totalHours;

        @ApiModelProperty(value = "参与人数", example = "8")
        private Integer workerCount;

        @ApiModelProperty(value = "平均工时", example = "10.06")
        private BigDecimal averageHours;

        @ApiModelProperty(value = "产出量", example = "500")
        private BigDecimal output;

        @ApiModelProperty(value = "生产效率", example = "6.21")
        private BigDecimal efficiency;
    }

    /**
     * 日统计
     */
    @Data
    @NoArgsConstructor
    @AllArgsConstructor
    @Builder
    public static class DailyStats {
        @ApiModelProperty(value = "日期")
        private LocalDate date;

        @ApiModelProperty(value = "星期", example = "Monday")
        private String dayOfWeek;

        @ApiModelProperty(value = "总工时", example = "40.5")
        private BigDecimal totalHours;

        @ApiModelProperty(value = "活跃员工数", example = "10")
        private Integer activeWorkers;

        @ApiModelProperty(value = "打卡次数", example = "20")
        private Long clockIns;

        @ApiModelProperty(value = "出勤率", example = "95.0")
        private BigDecimal attendanceRate;

        @ApiModelProperty(value = "是否工作日", example = "true")
        private Boolean isWorkday;
    }

    /**
     * 生产力分析
     */
    @Data
    @NoArgsConstructor
    @AllArgsConstructor
    @Builder
    public static class ProductivityAnalysis {
        @ApiModelProperty(value = "时间段")
        private String period;

        @ApiModelProperty(value = "总产出", example = "10000")
        private BigDecimal totalOutput;

        @ApiModelProperty(value = "总投入工时", example = "500")
        private BigDecimal totalInputHours;

        @ApiModelProperty(value = "人均产出", example = "400")
        private BigDecimal outputPerWorker;

        @ApiModelProperty(value = "时均产出", example = "20")
        private BigDecimal outputPerHour;

        @ApiModelProperty(value = "效率指数", example = "1.05")
        private BigDecimal efficiencyIndex;

        @ApiModelProperty(value = "趋势", example = "上升")
        private String trend;

        @ApiModelProperty(value = "环比增长", example = "5.5")
        private BigDecimal growthRate;

        @ApiModelProperty(value = "最高效部门", example = "生产部")
        private String mostEfficientDepartment;

        @ApiModelProperty(value = "最高效工作类型", example = "包装")
        private String mostEfficientWorkType;

        @ApiModelProperty(value = "改进建议")
        private List<String> improvements;
    }

    /**
     * 员工时间统计
     */
    @Data
    @NoArgsConstructor
    @AllArgsConstructor
    @Builder
    public static class WorkerTimeStats {
        @ApiModelProperty(value = "员工ID", example = "1")
        private Integer workerId;

        @ApiModelProperty(value = "员工姓名", example = "张三")
        private String workerName;

        @ApiModelProperty(value = "部门", example = "生产部")
        private String department;

        @ApiModelProperty(value = "总工时", example = "160")
        private BigDecimal totalHours;

        @ApiModelProperty(value = "正常工时", example = "140")
        private BigDecimal regularHours;

        @ApiModelProperty(value = "加班工时", example = "20")
        private BigDecimal overtimeHours;

        @ApiModelProperty(value = "出勤天数", example = "20")
        private Integer attendanceDays;

        @ApiModelProperty(value = "迟到次数", example = "1")
        private Integer lateCount;

        @ApiModelProperty(value = "早退次数", example = "0")
        private Integer earlyLeaveCount;

        @ApiModelProperty(value = "出勤率", example = "95.0")
        private BigDecimal attendanceRate;

        @ApiModelProperty(value = "排名", example = "5")
        private Integer ranking;
    }
}