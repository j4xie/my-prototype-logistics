package com.cretas.aims.dto.material;

import io.swagger.annotations.ApiModel;
import io.swagger.annotations.ApiModelProperty;
import lombok.Data;

import javax.validation.constraints.*;
import java.math.BigDecimal;
import java.time.LocalDate;

/**
 * 创建原材料批次请求对象
 *
 * @author Cretas Team
 * @version 1.0.0
 * @since 2025-01-09
 */
@Data
@ApiModel(description = "创建原材料批次请求")
public class CreateMaterialBatchRequest {

    @ApiModelProperty(value = "原材料类型ID", required = true)
    @NotNull(message = "原材料类型不能为空")
    private Integer materialTypeId;

    @ApiModelProperty(value = "供应商ID")
    private Integer supplierId;

    @ApiModelProperty(value = "采购日期", required = true)
    @NotNull(message = "采购日期不能为空")
    private LocalDate purchaseDate;

    @ApiModelProperty(value = "到期日期")
    @Future(message = "到期日期必须是未来日期")
    private LocalDate expireDate;

    @ApiModelProperty(value = "初始数量", required = true)
    @NotNull(message = "初始数量不能为空")
    @DecimalMin(value = "0.01", message = "初始数量必须大于0")
    private BigDecimal initialQuantity;

    @ApiModelProperty(value = "单价", required = true)
    @NotNull(message = "单价不能为空")
    @DecimalMin(value = "0.01", message = "单价必须大于0")
    private BigDecimal unitPrice;

    @ApiModelProperty(value = "存储位置")
    @Size(max = 100, message = "存储位置不能超过100个字符")
    private String storageLocation;

    @ApiModelProperty(value = "质量证书")
    @Size(max = 100, message = "质量证书不能超过100个字符")
    private String qualityCertificate;

    @ApiModelProperty(value = "备注")
    @Size(max = 500, message = "备注不能超过500个字符")
    private String notes;

    @ApiModelProperty(value = "保质期天数（如果未提供到期日期）")
    @Min(value = 1, message = "保质期天数至少为1天")
    private Integer shelfLifeDays;
}