package com.cretas.aims.dto.production;

import com.cretas.aims.entity.enums.ProductionPlanStatus;
import io.swagger.annotations.ApiModel;
import io.swagger.annotations.ApiModelProperty;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Data;
import lombok.NoArgsConstructor;

import java.math.BigDecimal;
import java.time.LocalDate;
import java.time.LocalDateTime;

/**
 * 生产计划数据传输对象
 *
 * @author Cretas Team
 * @version 1.0.0
 * @since 2025-01-09
 */
@Data
@Builder
@NoArgsConstructor
@AllArgsConstructor
@ApiModel(description = "生产计划信息")
public class ProductionPlanDTO {

    @ApiModelProperty(value = "计划ID")
    private Integer id;

    @ApiModelProperty(value = "工厂ID")
    private String factoryId;

    @ApiModelProperty(value = "计划编号")
    private String planNumber;

    @ApiModelProperty(value = "产品类型ID")
    private Integer productTypeId;

    @ApiModelProperty(value = "产品名称")
    private String productName;

    @ApiModelProperty(value = "产品单位")
    private String productUnit;

    @ApiModelProperty(value = "计划数量")
    private BigDecimal plannedQuantity;

    @ApiModelProperty(value = "实际数量")
    private BigDecimal actualQuantity;

    @ApiModelProperty(value = "计划日期")
    private LocalDate plannedDate;

    @ApiModelProperty(value = "开始时间")
    private LocalDateTime startTime;

    @ApiModelProperty(value = "结束时间")
    private LocalDateTime endTime;

    @ApiModelProperty(value = "状态")
    private ProductionPlanStatus status;

    @ApiModelProperty(value = "状态显示名称")
    private String statusDisplayName;

    @ApiModelProperty(value = "客户订单号")
    private String customerOrderNumber;

    @ApiModelProperty(value = "优先级")
    private Integer priority;

    @ApiModelProperty(value = "预估材料成本")
    private BigDecimal estimatedMaterialCost;

    @ApiModelProperty(value = "实际材料成本")
    private BigDecimal actualMaterialCost;

    @ApiModelProperty(value = "预估人工成本")
    private BigDecimal estimatedLaborCost;

    @ApiModelProperty(value = "实际人工成本")
    private BigDecimal actualLaborCost;

    @ApiModelProperty(value = "预估设备成本")
    private BigDecimal estimatedEquipmentCost;

    @ApiModelProperty(value = "实际设备成本")
    private BigDecimal actualEquipmentCost;

    @ApiModelProperty(value = "预估其他成本")
    private BigDecimal estimatedOtherCost;

    @ApiModelProperty(value = "实际其他成本")
    private BigDecimal actualOtherCost;

    @ApiModelProperty(value = "总成本")
    private BigDecimal totalCost;

    @ApiModelProperty(value = "备注")
    private String notes;

    @ApiModelProperty(value = "创建人ID")
    private Integer createdBy;

    @ApiModelProperty(value = "创建人姓名")
    private String createdByName;

    @ApiModelProperty(value = "创建时间")
    private LocalDateTime createdAt;

    @ApiModelProperty(value = "更新时间")
    private LocalDateTime updatedAt;
}