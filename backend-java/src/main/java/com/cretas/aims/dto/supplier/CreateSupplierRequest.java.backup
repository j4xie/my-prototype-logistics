package com.cretas.aims.dto.supplier;

import io.swagger.annotations.ApiModel;
import io.swagger.annotations.ApiModelProperty;
import lombok.Data;

import javax.validation.constraints.Email;
import javax.validation.constraints.NotBlank;
import javax.validation.constraints.Pattern;
import javax.validation.constraints.PositiveOrZero;
import java.math.BigDecimal;

/**
 * 创建供应商请求
 *
 * @author Cretas Team
 * @version 1.0.0
 * @since 2025-01-09
 */
@Data
@ApiModel(description = "创建供应商请求")
public class CreateSupplierRequest {

    @ApiModelProperty(value = "供应商名称", required = true)
    @NotBlank(message = "供应商名称不能为空")
    private String name;

    @ApiModelProperty(value = "联系人", required = true)
    @NotBlank(message = "联系人不能为空")
    private String contactPerson;

    @ApiModelProperty(value = "联系电话", required = true)
    @NotBlank(message = "联系电话不能为空")
    @Pattern(regexp = "^1[3-9]\\d{9}$", message = "手机号格式不正确")
    private String phone;

    @ApiModelProperty(value = "邮箱")
    @Email(message = "邮箱格式不正确")
    private String email;

    @ApiModelProperty(value = "地址", required = true)
    @NotBlank(message = "地址不能为空")
    private String address;

    @ApiModelProperty(value = "营业执照号")
    private String businessLicense;

    @ApiModelProperty(value = "税号")
    private String taxNumber;

    @ApiModelProperty(value = "开户银行")
    private String bankName;

    @ApiModelProperty(value = "银行账号")
    private String bankAccount;

    @ApiModelProperty(value = "供应材料类型")
    private String suppliedMaterials;

    @ApiModelProperty(value = "付款条款")
    private String paymentTerms;

    @ApiModelProperty(value = "交货天数")
    @PositiveOrZero(message = "交货天数必须大于等于0")
    private Integer deliveryDays;

    @ApiModelProperty(value = "信用额度")
    @PositiveOrZero(message = "信用额度必须大于等于0")
    private BigDecimal creditLimit;

    @ApiModelProperty(value = "供应商评级 (1-5)")
    private Integer rating;

    @ApiModelProperty(value = "评级说明")
    private String ratingNotes;

    @ApiModelProperty(value = "质量认证证书")
    private String qualityCertificates;

    @ApiModelProperty(value = "备注")
    private String notes;
}