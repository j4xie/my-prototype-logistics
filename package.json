{
  "name": "food-trace-system",
  "version": "1.0.0",
  "description": "食品溯源系统",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:unit:run": "node tests/run-unit-tests.js",
    "test:integration:run": "node tests/run-integration-tests.js",
    "test:all": "node run-all-tests.js",
    "test:resource": "node validation/scripts/check-resource.js",
    "test:ui": "node validation/scripts/check-ui.js",
    "test:pages": "node validation/scripts/check-page-transitions.js",
    "test:func": "node validation/scripts/check-functionality.js",
    "test:html": "node validation/scripts/check-html-structure.js",
    "test:buttons": "node validation/scripts/check-buttons.js",
    "fix:html": "node validation/scripts/fix-html-structure.js",
    "start": "browser-sync start --server --files \"*.html, *.css, *.js, **/*.js, **/*.html, **/*.css\" --no-notify",
    "lint": "eslint *.js components/**/*.js",
    "build:css": "npx postcss assets/styles.css -o assets/styles.min.css",
    "deploy": "npm run build:css && surge ./ food-trace-prototype.surge.sh",
    "deploy:simple": "surge ./ food-trace-prototype.surge.sh"
  },
  "keywords": [
    "food",
    "traceability",
    "supply-chain"
  ],
  "author": "食品溯源系统开发团队",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.35.1",
    "axios": "^1.6.7",
    "chart.js": "^4.4.1",
    "date-fns": "^3.3.1",
    "dexie": "^3.2.4",
    "exceljs": "^4.4.0",
    "html5-qrcode": "^2.3.8",
    "jsbarcode": "^3.11.6",
    "jsqr": "^1.4.0",
    "lodash": "^4.17.21",
    "marked": "^11.2.0",
    "pako": "^2.1.0",
    "papaparse": "^5.4.1",
    "pdfjs-dist": "^4.0.379",
    "qrcode": "^1.5.3",
    "zxing-js": "^0.20.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "autoprefixer": "^10.4.0",
    "babel-jest": "^29.7.0",
    "browser-sync": "^2.27.7",
    "eslint": "^8.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.5",
    "postcss-cli": "^10.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^components/(.*)$": "<rootDir>/components/$1"
    },
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "components/modules/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "directories": {
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/j4xie/my-prototype-logistics.git"
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/j4xie/my-prototype-logistics/issues"
  },
  "homepage": "https://github.com/j4xie/my-prototype-logistics#readme"
}