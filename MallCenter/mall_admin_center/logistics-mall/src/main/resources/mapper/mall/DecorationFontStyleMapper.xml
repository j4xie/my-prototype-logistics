<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.joolun.mall.mapper.DecorationFontStyleMapper">
    <resultMap id="fontStyleMap" type="com.joolun.mall.entity.DecorationFontStyle">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="code" column="code"/>
        <result property="fontFamily" column="font_family"/>
        <result property="fontUrl" column="font_url"/>
        <result property="usageType" column="usage_type"/>
        <result property="fontWeight" column="font_weight"/>
        <result property="fontSize" column="font_size"/>
        <result property="lineHeight" column="line_height"/>
        <result property="letterSpacing" column="letter_spacing"/>
        <result property="previewText" column="preview_text"/>
        <result property="styleConfig" column="style_config"/>
        <result property="status" column="status"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="useCount" column="use_count"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="fontStyleSql">
        t.id, t.name, t.code, t.font_family, t.font_url,
        t.usage_type, t.font_weight, t.font_size, t.line_height,
        t.letter_spacing, t.preview_text, t.style_config,
        t.status, t.sort_order, t.use_count, t.create_time
    </sql>

    <select id="selectByUsageType" resultMap="fontStyleMap">
        SELECT <include refid="fontStyleSql"/>
        FROM decoration_font_style t
        WHERE t.status = 1 AND t.usage_type = #{usageType}
        ORDER BY t.sort_order ASC
    </select>

    <select id="selectActiveList" resultMap="fontStyleMap">
        SELECT <include refid="fontStyleSql"/>
        FROM decoration_font_style t
        WHERE t.status = 1
        ORDER BY t.sort_order ASC
    </select>
</mapper>
