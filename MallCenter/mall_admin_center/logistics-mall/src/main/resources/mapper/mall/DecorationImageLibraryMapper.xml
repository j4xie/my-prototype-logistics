<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.joolun.mall.mapper.DecorationImageLibraryMapper">
    <resultMap id="imageLibraryMap" type="com.joolun.mall.entity.DecorationImageLibrary">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="imageUrl" column="image_url"/>
        <result property="thumbnailUrl" column="thumbnail_url"/>
        <result property="imageType" column="image_type"/>
        <result property="industryType" column="industry_type"/>
        <result property="styleType" column="style_type"/>
        <result property="width" column="width"/>
        <result property="height" column="height"/>
        <result property="fileSize" column="file_size"/>
        <result property="tags" column="tags"/>
        <result property="status" column="status"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="useCount" column="use_count"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="imageLibrarySql">
        t.id, t.name, t.image_url, t.thumbnail_url, t.image_type,
        t.industry_type, t.style_type, t.width, t.height, t.file_size,
        t.tags, t.status, t.sort_order, t.use_count, t.create_time
    </sql>

    <select id="selectByIndustry" resultMap="imageLibraryMap">
        SELECT <include refid="imageLibrarySql"/>
        FROM decoration_image_library t
        WHERE t.status = 1 AND t.industry_type = #{industryType}
        ORDER BY t.sort_order ASC
    </select>

    <select id="selectByStyle" resultMap="imageLibraryMap">
        SELECT <include refid="imageLibrarySql"/>
        FROM decoration_image_library t
        WHERE t.status = 1 AND t.style_type = #{styleType}
        ORDER BY t.sort_order ASC
    </select>

    <select id="selectByType" resultMap="imageLibraryMap">
        SELECT <include refid="imageLibrarySql"/>
        FROM decoration_image_library t
        WHERE t.status = 1 AND t.image_type = #{imageType}
        ORDER BY t.sort_order ASC
    </select>

    <select id="selectActiveList" resultMap="imageLibraryMap">
        SELECT <include refid="imageLibrarySql"/>
        FROM decoration_image_library t
        WHERE t.status = 1
        ORDER BY t.sort_order ASC
    </select>
</mapper>
