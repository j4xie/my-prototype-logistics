<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.joolun.mall.mapper.AiKnowledgeDocumentMapper">
    
    <resultMap id="aiKnowledgeDocumentMap" type="com.joolun.mall.entity.AiKnowledgeDocument">
        <id column="id" property="id"/>
        <result column="category_id" property="categoryId"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="summary" property="summary"/>
        <result column="keywords" property="keywords"/>
        <result column="source" property="source"/>
        <result column="file_url" property="fileUrl"/>
        <result column="file_type" property="fileType"/>
        <result column="vector_status" property="vectorStatus"/>
        <result column="vector_id" property="vectorId"/>
        <result column="view_count" property="viewCount"/>
        <result column="like_count" property="likeCount"/>
        <result column="status" property="status"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="del_flag" property="delFlag"/>
    </resultMap>
    
    <sql id="Base_Column_List">
        id, category_id, title, content, summary, keywords, source, file_url, file_type, 
        vector_status, vector_id, view_count, like_count, status, create_by, create_time, update_time, del_flag
    </sql>
    
    <!-- 根据分类ID查询文档 -->
    <select id="selectByCategoryId" resultMap="aiKnowledgeDocumentMap">
        SELECT <include refid="Base_Column_List"/>
        FROM ai_knowledge_document
        WHERE del_flag = 0 AND category_id = #{categoryId}
        ORDER BY create_time DESC
    </select>
    
    <!-- 搜索文档（标题、关键词、内容） -->
    <select id="searchDocuments" resultMap="aiKnowledgeDocumentMap">
        SELECT <include refid="Base_Column_List"/>
        FROM ai_knowledge_document
        WHERE del_flag = 0 AND status = 1
        <if test="keyword != null and keyword != ''">
            AND (title LIKE CONCAT('%', #{keyword}, '%') 
                 OR keywords LIKE CONCAT('%', #{keyword}, '%')
                 OR content LIKE CONCAT('%', #{keyword}, '%'))
        </if>
        <if test="categoryId != null">
            AND category_id = #{categoryId}
        </if>
        ORDER BY view_count DESC, create_time DESC
    </select>
    
    <!-- 增加浏览次数 -->
    <update id="incrementViewCount">
        UPDATE ai_knowledge_document 
        SET view_count = view_count + 1 
        WHERE id = #{id}
    </update>
    
    <!-- 增加点赞次数 -->
    <update id="incrementLikeCount">
        UPDATE ai_knowledge_document 
        SET like_count = like_count + 1 
        WHERE id = #{id}
    </update>
    
</mapper>
