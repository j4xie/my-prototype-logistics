<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.joolun.mall.mapper.TraceabilityEvidenceMapper">
    <resultMap id="evidenceMap" type="com.joolun.mall.entity.TraceabilityEvidence">
        <id property="id" column="id"/>
        <result property="batchId" column="batch_id"/>
        <result property="type" column="type"/>
        <result property="title" column="title"/>
        <result property="description" column="description"/>
        <result property="url" column="url"/>
        <result property="thumbnailUrl" column="thumbnail_url"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <sql id="evidenceSql">
        te.id,
        te.batch_id,
        te.type,
        te.title,
        te.description,
        te.url,
        te.thumbnail_url,
        te.sort_order,
        te.create_time
    </sql>

    <select id="selectByBatchId" resultMap="evidenceMap">
        SELECT
        <include refid="evidenceSql"/>
        FROM traceability_evidence te
        WHERE te.batch_id = #{batchId}
        ORDER BY te.sort_order ASC, te.create_time ASC
    </select>
</mapper>
