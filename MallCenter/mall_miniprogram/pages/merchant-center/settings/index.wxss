/* 店铺设置样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 店铺卡片 */
.shop-card {
  background: linear-gradient(135deg, #1A1A1A, #2D2D2D);
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 16rpx;
}

.shop-header {
  display: flex;
  align-items: center;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #333;
}

.shop-logo {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  flex-shrink: 0;
}

.shop-logo image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  border: 2rpx solid #C9A86C;
}

.logo-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: #C9A86C;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo-edit text {
  font-size: 24rpx;
  color: #1A1A1A;
}

.shop-info {
  flex: 1;
  margin-left: 20rpx;
}

.shop-name-row {
  display: flex;
  align-items: center;
}

.shop-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
}

.shop-name-row .cuIcon-edit {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: #C9A86C;
}

.shop-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.shop-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 24rpx;
}

.status-info {
  display: flex;
  flex-direction: column;
}

.status-label {
  font-size: 24rpx;
  color: #999;
}

.status-text {
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 6rpx;
}

.status-text.open {
  color: #52c41a;
}

.status-text.closed {
  color: #FF4D4F;
}

/* 区块 */
.section {
  background: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 24rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

/* 信息列表 */
.info-list {
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 0 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.info-icon {
  font-size: 32rpx;
  color: #C9A86C;
  margin-right: 16rpx;
}

.info-label {
  font-size: 26rpx;
  color: #999;
  width: 140rpx;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

/* 设置列表 */
.setting-list {
  margin: 0 -24rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background: #f9f9f9;
}

.setting-icon {
  font-size: 40rpx;
  color: #C9A86C;
  margin-right: 20rpx;
}

.setting-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.setting-title {
  font-size: 28rpx;
  color: #333;
}

.setting-desc {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 退出按钮 */
.logout-section {
  padding: 40rpx 20rpx;
}











