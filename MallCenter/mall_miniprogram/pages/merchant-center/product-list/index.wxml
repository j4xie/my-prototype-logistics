<!--
  商家商品列表页面
-->
<view class="container">
  <!-- Tab栏 -->
  <view class="tab-bar">
    <view class="tab-item {{currentTab === item.key ? 'active' : ''}}" 
          wx:for="{{tabs}}" wx:key="key"
          bindtap="switchTab" data-tab="{{item.key}}">
      <text>{{item.title}}</text>
    </view>
  </view>

  <!-- 商品列表 -->
  <view class="product-list">
    <view class="product-card" wx:for="{{products}}" wx:key="id">
      <image class="product-image" src="{{item.image}}" mode="aspectFill"></image>
      <view class="product-info">
        <text class="product-name">{{item.name}}</text>
        <view class="product-meta">
          <text class="product-price">¥{{item.price}}</text>
          <text class="product-stats">库存{{item.stock}} 销量{{item.sales}}</text>
        </view>
        <view class="product-status {{item.status}}">
          <text class="status-dot"></text>
          <text>{{item.statusText}}</text>
        </view>
      </view>
      <view class="product-actions">
        <view class="action-btn" bindtap="editProduct" data-id="{{item.id}}">
          <text class="cuIcon-edit"></text>
        </view>
        <view class="action-btn" bindtap="toggleStatus" data-id="{{item.id}}" data-status="{{item.status}}">
          <text class="cuIcon-{{item.status === 'online' ? 'move' : 'upload'}}"></text>
        </view>
        <view class="action-btn danger" bindtap="deleteProduct" data-id="{{item.id}}">
          <text class="cuIcon-delete"></text>
        </view>
      </view>
    </view>

    <!-- 加载状态 -->
    <view class="loading-more" wx:if="{{loading}}">
      <view class="cu-load loading"></view>
    </view>
    
    <view class="no-more" wx:if="{{!hasMore && products.length > 0}}">
      <text>没有更多商品了</text>
    </view>

    <view class="empty-state" wx:if="{{!loading && products.length === 0}}">
      <text class="cuIcon-goods"></text>
      <text>暂无商品</text>
      <button class="cu-btn bg-green" bindtap="addProduct">添加商品</button>
    </view>
  </view>

  <!-- 添加按钮 -->
  <view class="fab-button" bindtap="addProduct">
    <text class="cuIcon-add"></text>
  </view>
</view>

















