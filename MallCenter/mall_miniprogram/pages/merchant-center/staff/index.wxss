/* 员工管理样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 20rpx;
}

/* 添加按钮 */
.add-section {
  margin-bottom: 20rpx;
}

/* 员工列表 */
.staff-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.staff-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.staff-card:last-child {
  border-bottom: none;
}

.staff-avatar {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
}

.staff-avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.status-dot {
  position: absolute;
  bottom: 4rpx;
  right: 4rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
}

.status-dot.active {
  background: #52c41a;
}

.status-dot.inactive {
  background: #999;
}

.staff-info {
  flex: 1;
  margin-left: 20rpx;
}

.staff-name {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.staff-name .cu-tag {
  margin-left: 12rpx;
}

.staff-phone {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #1890ff;
  margin: 8rpx 0;
}

.staff-join {
  font-size: 22rpx;
  color: #999;
}

.staff-action {
  padding: 20rpx;
}

.staff-action text {
  font-size: 36rpx;
  color: #999;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx;
  color: #999;
}

.empty-state text:first-child {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

/* 权限说明 */
.tips-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 20rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.tips-item {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
  font-size: 24rpx;
  color: #666;
}

.tips-item .cu-tag {
  margin-right: 16rpx;
  min-width: 80rpx;
  text-align: center;
}

























