/* 订单评价页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

/* 商品卡片 */
.goods-card {
  display: flex;
  gap: 20rpx;
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #f0f0f0;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 12rpx;
}

.goods-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-spec {
  font-size: 26rpx;
  color: #999;
}

/* 评分区域 */
.rating-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.rating-row {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.rating-row:last-child {
  border-bottom: none;
}

.rating-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333;
}

.stars {
  display: flex;
  gap: 16rpx;
  flex: 1;
}

.star {
  font-size: 48rpx;
  color: #ddd;
  transition: all 0.2s;
}

.star.active {
  color: #ffb800;
  transform: scale(1.1);
}

.rating-text {
  width: 100rpx;
  text-align: right;
  font-size: 26rpx;
  color: #999;
}

/* 评价内容 */
.content-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.content-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-sizing: border-box;
}

.placeholder {
  color: #bbb;
}

.word-count {
  position: absolute;
  right: 50rpx;
  bottom: 50rpx;
  font-size: 24rpx;
  color: #bbb;
}

/* 快捷标签 */
.tags-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 16rpx 28rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.tag.selected {
  background: rgba(102, 126, 234, 0.1);
  color: #667eea;
  border-color: #667eea;
}

/* 图片上传 */
.images-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.images-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background: #f0f0f0;
}

.delete-btn {
  position: absolute;
  top: -16rpx;
  right: -16rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.add-image {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.add-icon {
  font-size: 60rpx;
  color: #bbb;
  line-height: 1;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

/* 匿名评价 */
.anonymous-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.anonymous-label {
  font-size: 28rpx;
  color: #333;
}

.anonymous-switch {
  transform: scale(0.9);
}

/* 提交按钮 */
.submit-section {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.disabled {
  background: #ccc;
}
