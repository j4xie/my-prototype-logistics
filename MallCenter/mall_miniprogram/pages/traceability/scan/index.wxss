/* 扫码溯源页样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #52c41a 0%, #52c41a 300rpx, #f5f5f5 300rpx);
  padding-bottom: 40rpx;
}

/* 顶部说明 */
.header-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 80rpx;
  color: #fff;
}

.header-icon {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.header-icon text {
  font-size: 60rpx;
  color: #fff;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.header-desc {
  font-size: 26rpx;
  opacity: 0.9;
  text-align: center;
  line-height: 1.6;
}

/* 扫码区域 */
.scan-section {
  margin: -60rpx 30rpx 30rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 扫码按钮 */
.scan-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background: linear-gradient(135deg, #52c41a, #73d13d);
  border-radius: 20rpx;
  color: #fff;
  transition: all 0.3s ease;
}

.scan-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.scan-button.scanning {
  background: linear-gradient(135deg, #73d13d, #95de64);
}

.scan-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  position: relative;
}

.scan-icon-wrapper text {
  font-size: 60rpx;
}

.scan-animation {
  position: absolute;
  width: 100%;
  height: 100%;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  animation: pulse 1.5s ease-out infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

.scan-text {
  font-size: 32rpx;
  font-weight: 500;
}

/* 分隔线 */
.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 2rpx;
  background: #e8e8e8;
}

.divider-text {
  padding: 0 30rpx;
  color: #999;
  font-size: 26rpx;
}

/* 输入区域 */
.input-section {
  display: flex;
  gap: 20rpx;
}

.input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.input-wrapper.active {
  border-color: #52c41a;
  background: #fff;
}

.input-icon {
  font-size: 32rpx;
  color: #bbb;
  margin-right: 16rpx;
}

.batch-input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
}

.input-clear {
  padding: 10rpx;
}

.input-clear text {
  font-size: 28rpx;
  color: #bbb;
}

.submit-btn {
  width: 140rpx !important;
  height: 80rpx !important;
  line-height: 80rpx !important;
  padding: 0 !important;
}

/* 扫码历史 */
.history-section {
  margin: 0 30rpx 30rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.section-title text:first-child {
  font-size: 32rpx;
  margin-right: 10rpx;
  color: #52c41a;
}

.section-action text {
  font-size: 28rpx;
  color: #999;
}

.history-list {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.history-list.expanded {
  max-height: 600rpx;
}

.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background: #f9f9f9;
}

.history-info {
  display: flex;
  flex-direction: column;
}

.history-batchno {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.history-time {
  font-size: 22rpx;
  color: #999;
}

.history-footer {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: center;
}

.clear-btn {
  font-size: 24rpx !important;
}

/* 使用说明 */
.tips-section {
  margin: 0 30rpx 30rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.tips-title {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.tips-title text:first-child {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.tips-list {
  background: #f9f9f9;
  border-radius: 12rpx;
  padding: 20rpx;
}

.tips-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.tips-item:last-child {
  margin-bottom: 0;
}

.tips-num {
  min-width: 36rpx;
  height: 36rpx;
  background: #52c41a;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  margin-right: 16rpx;
  margin-top: 2rpx;
}

/* 底部品牌 */
.footer-brand {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #999;
  font-size: 24rpx;
}

.footer-brand text:first-child {
  font-size: 32rpx;
  margin-right: 10rpx;
}
















