/* 分享推荐页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 头部卡片 */
.header-card {
  position: relative;
  height: 280rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.header-content {
  position: relative;
  z-index: 1;
  padding: 60rpx 40rpx;
  color: #fff;
}

.header-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.header-desc {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

/* 统计卡片 */
.stats-card {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: -40rpx 30rpx 30rpx;
  padding: 40rpx 20rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 2;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.stat-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-value.highlight {
  color: #ff4d4f;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #eee;
}

/* 二维码区域 */
.qrcode-section {
  margin: 0 30rpx 30rpx;
  padding: 40rpx;
  background: #fff;
  border-radius: 20rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
}

.qrcode-wrapper {
  display: flex;
  justify-content: center;
  padding: 40rpx;
  background: #fafafa;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.qrcode-image {
  width: 300rpx;
  height: 300rpx;
}

.qrcode-placeholder {
  width: 300rpx;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 16rpx;
}

.placeholder-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.placeholder-text {
  font-size: 24rpx;
  color: #999;
}

.referral-code-row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 30rpx;
}

.code-label {
  font-size: 28rpx;
  color: #666;
}

.code-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #667eea;
  letter-spacing: 2rpx;
}

.copy-btn {
  padding: 8rpx 24rpx;
  background: #667eea;
  color: #fff;
  font-size: 24rpx;
  border-radius: 20rpx;
}

.qrcode-actions {
  display: flex;
  justify-content: center;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 60rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #333;
}

.action-icon {
  font-size: 32rpx;
}

/* 分享入口 */
.share-section {
  margin: 0 30rpx 30rpx;
  padding: 40rpx;
  background: #fff;
  border-radius: 20rpx;
}

.share-buttons {
  display: flex;
  gap: 30rpx;
}

.share-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
  border-radius: 16rpx;
  border: none;
  background: transparent;
  line-height: 1.5;
}

.share-btn::after {
  border: none;
}

.share-btn.wechat {
  background: linear-gradient(135deg, #07c160 0%, #09bb07 100%);
  color: #fff;
}

.share-btn.moments {
  background: linear-gradient(135deg, #576b95 0%, #4a5d8a 100%);
  color: #fff;
}

.share-icon {
  font-size: 48rpx;
  margin-bottom: 12rpx;
}

.share-text {
  font-size: 26rpx;
}

/* 邀请步骤 */
.steps-section {
  margin: 0 30rpx 30rpx;
  padding: 40rpx;
  background: #fff;
  border-radius: 20rpx;
}

.steps-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.step-number {
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
  padding-top: 6rpx;
}

.step-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 6rpx;
}

.step-desc {
  font-size: 26rpx;
  color: #666;
}

/* 奖励说明卡片 */
.reward-info-card {
  margin: 0 30rpx 30rpx;
  padding: 40rpx;
  background: #fff;
  border-radius: 20rpx;
}

.reward-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.reward-icon {
  font-size: 40rpx;
}

.reward-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.reward-rules {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 24rpx;
  background: #fafafa;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.rule-item {
  display: flex;
  gap: 12rpx;
}

.rule-dot {
  color: #667eea;
  font-weight: 700;
}

.rule-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.view-more {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #667eea;
}

.arrow {
  font-size: 24rpx;
}
