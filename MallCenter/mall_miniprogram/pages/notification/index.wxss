/* 消息通知中心页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 顶部操作栏 */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.unread-info {
  display: flex;
  align-items: center;
}

.unread-count {
  font-size: 36rpx;
  font-weight: bold;
  color: #e74c3c;
  margin-right: 8rpx;
}

.unread-text {
  font-size: 28rpx;
  color: #666;
}

.mark-all-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: #f0f0f0;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.mark-all-btn:active {
  background: #e0e0e0;
}

/* 分类筛选 */
.category-scroll {
  background: #fff;
  white-space: nowrap;
  border-bottom: 1rpx solid #eee;
}

.category-list {
  display: inline-flex;
  padding: 20rpx 30rpx;
  gap: 30rpx;
}

.category-item {
  padding: 12rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
  background: #f5f5f5;
  flex-shrink: 0;
}

.category-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

/* 通知列表 */
.notification-list {
  padding: 20rpx;
}

.notification-item {
  display: flex;
  position: relative;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.notification-item.unread {
  background: linear-gradient(90deg, rgba(102, 126, 234, 0.05) 0%, #fff 100%);
}

.notification-item:active {
  opacity: 0.9;
}

/* 未读标记 */
.unread-dot {
  position: absolute;
  top: 30rpx;
  left: 16rpx;
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #e74c3c;
}

/* 通知图标 */
.notification-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.notification-icon.product_found {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.notification-icon.promotion {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.notification-icon.system {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.notification-icon text {
  font-size: 40rpx;
  color: #fff;
}

/* 通知内容 */
.notification-content {
  flex: 1;
  min-width: 0;
}

.notification-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.notification-category {
  font-size: 22rpx;
  color: #667eea;
  background: rgba(102, 126, 234, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.notification-time {
  font-size: 22rpx;
  color: #bbb;
}

.notification-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.5;
}

.notification-desc {
  font-size: 26rpx;
  color: #999;
  margin-top: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.5;
}

/* 关联商品预览 */
.related-products {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 16rpx;
  padding: 16rpx 20rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
}

.product-tag {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #667eea;
}

.related-products .cuIcon-right {
  font-size: 24rpx;
  color: #ccc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 60rpx;
}

.empty-icon {
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  padding: 60rpx;
}

.load-more {
  padding: 30rpx;
}
