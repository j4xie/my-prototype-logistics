/* AI智能问答页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 产品上下文提示条 (从商品详情页跳转时显示) */
.product-context-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.product-context-bar .cuIcon-info {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.product-context-bar .context-text {
  flex: 1;
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-context-bar .context-close {
  padding: 8rpx;
  margin-left: 12rpx;
}

.product-context-bar .context-close .cuIcon-close {
  font-size: 28rpx;
  opacity: 0.8;
}

/* 欢迎区域 */
.welcome-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  padding-bottom: 200rpx;
}

.welcome-icon {
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.welcome-icon text {
  font-size: 70rpx;
  color: #fff;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin-bottom: 50rpx;
}

/* 快捷问题 */
.quick-questions {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.quick-question-btn {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.quick-question-btn text:first-child {
  font-size: 36rpx;
  color: #667eea;
  margin-right: 16rpx;
}

.quick-question-btn text:last-child {
  font-size: 28rpx;
  color: #666;
}

/* 聊天滚动区域 */
.chat-scroll {
  flex: 1;
  padding: 20rpx;
}

/* 消息列表 */
.messages-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

/* 消息 */
.message {
  display: flex;
  gap: 16rpx;
}

.message.user {
  flex-direction: row-reverse;
}

.message-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.message.user .message-avatar {
  background: #e8e8e8;
}

.message-avatar text {
  font-size: 36rpx;
  color: #fff;
}

.message.user .message-avatar text {
  color: #666;
}

.message-content {
  max-width: 70%;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.message.user .message-content {
  align-items: flex-end;
}

.message-bubble {
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx 24rpx 24rpx 4rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.message.user .message-bubble {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 24rpx 24rpx 4rpx 24rpx;
}

.message-sources {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.source-tag {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 6rpx 16rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 20rpx;
  font-size: 22rpx;
  color: #667eea;
}

.message-time {
  font-size: 22rpx;
  color: #bbb;
  padding: 0 8rpx;
}

/* 输入中指示器 */
.typing-indicator {
  display: flex;
  gap: 10rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 24rpx;
}

.typing-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #bbb;
  animation: typingAnimation 1.4s infinite;
}

.typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typingAnimation {
  0%, 60%, 100% {
    transform: translateY(0);
    opacity: 0.5;
  }
  30% {
    transform: translateY(-16rpx);
    opacity: 1;
  }
}

/* 输入区域 */
.input-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.input-wrapper {
  display: flex;
  align-items: flex-end;
  gap: 16rpx;
}

/* textarea样式 (参考白垩纪App inputWrapper设计, 支持点击光标定位) */
.input-field {
  flex: 1;
  min-height: 40rpx;
  max-height: 160rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  box-sizing: border-box;
}

.send-btn {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
}

.send-btn text {
  font-size: 40rpx;
  color: #fff;
}

.send-btn.disabled {
  opacity: 0.5;
}

.send-btn::after {
  border: none;
}

/* 功能按钮栏 */
.action-bar {
  display: flex;
  justify-content: center;
  gap: 60rpx;
  margin-top: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 20rpx;
}

.action-btn text:first-child {
  font-size: 28rpx;
  color: #999;
}

.action-btn text:last-child {
  font-size: 24rpx;
  color: #999;
}

/* 商品推荐卡片样式 */
.product-cards-scroll {
  width: 100%;
  margin-top: 16rpx;
  white-space: nowrap;
}

.product-cards {
  display: inline-flex;
  gap: 16rpx;
  padding: 8rpx 0;
}

.product-card {
  display: inline-flex;
  flex-direction: column;
  width: 280rpx;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  flex-shrink: 0;
}

.product-card:active {
  transform: scale(0.98);
}

.product-image {
  width: 280rpx;
  height: 280rpx;
  background: #f5f5f5;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 26rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
  height: 72rpx;
  white-space: normal;
}

.product-price {
  display: flex;
  align-items: baseline;
  margin-top: 8rpx;
}

.price-symbol {
  font-size: 22rpx;
  color: #e74c3c;
}

.price-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #e74c3c;
}

/* 商品主区域 (点击跳转详情) */
.product-main {
  cursor: pointer;
}

/* 商品卡片操作按钮 (借鉴白垩纪App suggestedActionButton样式) */
.product-actions {
  display: flex;
  gap: 8rpx;
  padding: 12rpx 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-action {
  flex: 1;
  font-size: 24rpx;
  padding: 10rpx 0;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  margin: 0;
  white-space: nowrap;
}

.btn-action::after {
  border: none;
}

.btn-cart {
  background: #f0f5ff;
  border: 1rpx solid #667eea;
  color: #667eea;
}

.btn-cart .cuIcon-cart {
  margin-right: 4rpx;
  font-size: 24rpx;
}

.btn-buy {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: #fff;
  border: none;
}

.btn-action:active {
  opacity: 0.8;
  transform: scale(0.98);
}
