/* AI咨询历史页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 搜索栏 */
.search-bar {
  position: sticky;
  top: 0;
  background: #fff;
  padding: 20rpx 24rpx;
  z-index: 10;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 24rpx;
  height: 72rpx;
}

.search-input-wrapper text:first-child {
  font-size: 32rpx;
  color: #999;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.search-input-wrapper .cuIcon-close {
  font-size: 28rpx;
  color: #999;
  padding: 10rpx;
}

/* 历史列表 */
.history-scroll {
  height: calc(100vh - 112rpx - 120rpx);
}

.history-list {
  padding: 20rpx;
}

.history-item {
  display: flex;
  align-items: flex-start;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.03);
}

.history-icon {
  width: 64rpx;
  height: 64rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.history-icon text {
  font-size: 32rpx;
  color: #fff;
}

.history-content {
  flex: 1;
  margin-left: 20rpx;
  overflow: hidden;
}

.history-question {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-answer {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-meta {
  display: flex;
  gap: 20rpx;
  margin-top: 12rpx;
}

.history-time,
.history-count {
  font-size: 22rpx;
  color: #bbb;
}

.history-arrow {
  color: #ccc;
  font-size: 28rpx;
  margin-left: 10rpx;
  align-self: center;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  color: #ddd;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  margin-bottom: 40rpx;
}

.start-chat-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 24rpx 60rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 28rpx;
  border: none;
}

.start-chat-btn::after {
  border: none;
}

/* 底部操作 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx 40rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.clear-all-btn {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  padding: 24rpx;
  background: #fff;
  border: 2rpx solid #ff4d4f;
  color: #ff4d4f;
  border-radius: 48rpx;
  font-size: 28rpx;
}

.clear-all-btn::after {
  border: none;
}
