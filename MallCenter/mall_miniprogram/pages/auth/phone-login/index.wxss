/* 手机号验证码登录页面样式 */
.container {
  min-height: 100vh;
  background: #fff;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #333;
}

/* 表单区域 */
.form-section {
  padding: 0 20rpx;
}

.input-group {
  margin-bottom: 40rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #e5e5e5;
  padding: 16rpx 0;
}

.input-wrapper:focus-within {
  border-bottom-color: #07c160;
}

.prefix {
  font-size: 32rpx;
  color: #333;
  margin-right: 20rpx;
  padding-right: 20rpx;
  border-right: 2rpx solid #e5e5e5;
}

.input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.clear-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 10rpx;
}

.code-wrapper {
  justify-content: space-between;
}

.code-input {
  width: 300rpx;
}

.send-code-btn {
  width: 200rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
  border: none;
  border-radius: 32rpx;
  padding: 0;
}

.send-code-btn.disabled {
  color: #999;
  background: #f5f5f5;
}

.send-code-btn::after {
  border: none;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  background: linear-gradient(135deg, #07c160, #10a37f);
  border: none;
  border-radius: 44rpx;
  margin-top: 60rpx;
}

.login-btn.disabled {
  background: #ccc;
}

.login-btn::after {
  border: none;
}

/* 其他登录方式 */
.other-login {
  margin-top: 80rpx;
}

.divider {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.divider .line {
  width: 100rpx;
  height: 2rpx;
  background: #e5e5e5;
}

.divider .text {
  font-size: 24rpx;
  color: #999;
  margin: 0 20rpx;
}

.login-methods {
  display: flex;
  justify-content: center;
}

.method-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 40rpx;
}

.method-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 12rpx;
}

.method-text {
  font-size: 24rpx;
  color: #666;
}

/* 用户协议 */
.agreement-section {
  position: fixed;
  bottom: 60rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  padding: 0 40rpx;
}

.agreement-label {
  display: flex;
  align-items: flex-start;
}

.agreement-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

.agreement-text .link {
  color: #07c160;
}
