/* 登录页面样式 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx 60rpx;
  box-sizing: border-box;
}

/* 头部区域 */
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.login-logo {
  width: 160rpx;
  height: 160rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  margin-bottom: 30rpx;
}

.logo-image {
  width: 100rpx;
  height: 100rpx;
}

.login-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 登录卡片 */
.login-card {
  width: 100%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.1);
}

/* 微信登录按钮 */
.wechat-btn {
  width: 100%;
  height: 96rpx;
  background: #07c160;
  color: #fff;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.3);
}

.wechat-btn::after {
  border: none;
}

.wechat-btn text:first-child {
  font-size: 44rpx;
  margin-right: 16rpx;
}

/* 分隔线 */
.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: #e8e8e8;
}

.divider-text {
  padding: 0 24rpx;
  font-size: 24rpx;
  color: #999;
}

/* 手机号登录按钮 */
.phone-btn {
  width: 100%;
  height: 88rpx;
  background: transparent;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 44rpx;
  font-size: 28rpx;
}

.phone-btn::after {
  border: none;
}

/* 用户协议 */
.agreement {
  margin-top: 40rpx;
}

.agreement-label {
  display: flex;
  align-items: flex-start;
}

.agreement-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
  margin-left: 10rpx;
}

.agreement-link {
  color: #667eea;
}

/* 特性展示 */
.features {
  display: flex;
  justify-content: space-around;
  width: 100%;
  max-width: 600rpx;
  margin-top: 80rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  font-size: 56rpx;
  color: #fff;
  margin-bottom: 12rpx;
}

.feature-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

/* 跳过登录 */
.skip-login {
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

.skip-login text:last-child {
  margin-left: 8rpx;
  font-size: 24rpx;
}

/* 弹窗覆盖样式 */
.cu-modal .cu-dialog {
  width: 600rpx;
}
