/* 登录页面样式 - 黑金风格 */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a1a1a 0%, #2c3e50 50%, #1a1a1a 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx 60rpx;
  box-sizing: border-box;
}

/* 头部区域 */
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.login-logo {
  width: 180rpx;
  height: 180rpx;
  background: rgba(212, 175, 55, 0.1);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 40rpx rgba(212, 175, 55, 0.2);
  margin-bottom: 30rpx;
  border: 3rpx solid rgba(212, 175, 55, 0.3);
}

.logo-icon-wrapper {
  width: 130rpx;
  height: 130rpx;
  background: linear-gradient(135deg, #D4AF37 0%, #B8962E 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 24rpx rgba(212, 175, 55, 0.4);
}

.logo-icon {
  font-size: 64rpx;
  color: #fff;
}

.login-title {
  font-size: 52rpx;
  font-weight: bold;
  color: #D4AF37;
  margin-bottom: 16rpx;
  letter-spacing: 4rpx;
}

.login-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 登录卡片 */
.login-card {
  width: 100%;
  max-width: 620rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 16rpx 60rpx rgba(0, 0, 0, 0.3);
}

/* 微信登录按钮 */
.wechat-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 6rpx 24rpx rgba(7, 193, 96, 0.35);
}

.wechat-btn::after {
  border: none;
}

.wechat-btn text:first-child {
  font-size: 44rpx;
  margin-right: 16rpx;
}

/* 分隔线 */
.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #ddd, transparent);
}

.divider-text {
  padding: 0 24rpx;
  font-size: 24rpx;
  color: #999;
}

/* 手机号登录按钮 - 金色边框 */
.phone-btn {
  width: 100%;
  height: 88rpx;
  background: transparent;
  color: #B8962E;
  border: 2rpx solid #D4AF37;
  border-radius: 44rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.phone-btn::after {
  border: none;
}

/* 用户协议 */
.agreement {
  margin-top: 40rpx;
}

.agreement-label {
  display: flex;
  align-items: flex-start;
}

.agreement-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  margin-left: 10rpx;
  display: inline;
}

.agreement-link {
  color: #D4AF37;
  display: inline;
}

/* 特性展示 */
.features {
  display: flex;
  justify-content: space-around;
  width: 100%;
  max-width: 620rpx;
  margin-top: 80rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(212, 175, 55, 0.15);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #D4AF37;
  margin-bottom: 16rpx;
  border: 2rpx solid rgba(212, 175, 55, 0.3);
}

.feature-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 跳过登录 */
.skip-login {
  margin-top: 60rpx;
  display: flex;
  align-items: center;
  color: rgba(212, 175, 55, 0.8);
  font-size: 26rpx;
  padding: 16rpx 32rpx;
  border-radius: 30rpx;
  background: rgba(212, 175, 55, 0.1);
  border: 1rpx solid rgba(212, 175, 55, 0.2);
}

.skip-login text:last-child {
  margin-left: 8rpx;
  font-size: 24rpx;
}

/* 弹窗覆盖样式 */
.cu-modal .cu-dialog {
  width: 600rpx;
  border-radius: 24rpx;
}
