/* 无结果面板样式 */
.no-result-panel {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  background-color: #fff;
  margin: 20rpx;
  border-radius: 16rpx;
}

.no-result-icon {
  margin-bottom: 30rpx;
}

.no-result-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.no-result-desc {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
  text-align: center;
}

.ai-chat-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  padding: 24rpx 60rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.ai-chat-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.ai-tip {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
  padding: 16rpx 32rpx;
  background-color: #f0fff4;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #38a169;
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.no-result-tips {
  width: 100%;
  padding: 30rpx;
  background-color: #f7f7f7;
  border-radius: 12rpx;
  margin-top: 40rpx;
}