<view class="cu-bar search bg-white fixed">
  <view class="search-form round">
    <text class="cuIcon-search"></text>
    <navigator class="response" hover-class='none' url='/pages/base/search/index'>
      <input type="text" placeholder="请输入商品名" value="{{parameter.name}}"></input>
    </navigator>
  </view>
  <view class="action">
    <view class="text-xxl">
      <text class="cuIcon-{{viewType ? 'list' : 'cascades'}} text-black" bindtap="viewTypeEdit"></text>
    </view>
  </view>
</view>
<view class="cu-bar justify-center bg-white fixed" style="margin-top:80rpx;box-shadow:none;">
  <view class="grid response text-center align-start">
    <view class="flex-sub padding-sm margin-xs radius text-blue text-bold">{{title}}</view>
    <view class="flex-sub padding-sm margin-xs radius">
      <view class="grid text-center" bindtap="sortHandle" data-type='price'>
        价格
        <view class="margin-left-xs">
          <view class="cuIcon-triangleupfill {{price=='asc' ? 'text-blue' : ''}}" data-type='price'/>
          <view class="basis-df"/>
          <view class="cuIcon-triangledownfill {{price=='desc' ? 'text-blue' : ''}}" data-type='price'/>
        </view>
      </view>
    </view>
    <view class="flex-sub padding-sm margin-xs radius">
      <view class="grid text-center" bindtap="sortHandle" data-type='sales'>
        销量
        <view class="margin-left-xs">
          <view class="cuIcon-triangleupfill {{sales=='asc' ? 'text-blue' : ''}}" data-type='sales'/>
          <view class="basis-df"/>
          <view class="cuIcon-triangledownfill {{sales=='desc' ? 'text-blue' : ''}}" data-type='sales'/>
        </view>
      </view>
    </view>
    <view class="flex-sub padding-sm margin-xs radius">
      <view class="{{createTime=='desc' ? 'text-blue text-bold' : ''}}" bindtap="sortHandle" data-type='createTime'>
        新上架
      </view>
    </view>
  </view>
</view>
<view style="margin-top:200rpx">
  <!-- 无结果提示面板 -->
  <view wx:if="{{noResult}}" class="no-result-panel">
    <view class="no-result-icon">
      <text class="cuIcon-searchlist text-gray" style="font-size: 120rpx;"></text>
    </view>
    <view class="no-result-title">未找到「{{searchKeyword}}」相关商品</view>
    <view class="no-result-desc">我们已记录您的需求，有新品上架会第一时间通知您</view>

    <!-- AI助手按钮 -->
    <view class="ai-chat-btn" bindtap="goToAiChat">
      <text class="cuIcon-message margin-right-xs"></text>
      问问AI助手
    </view>

    <!-- 已记录提示 -->
    <view wx:if="{{showAiTip}}" class="ai-tip">
      <text class="cuIcon-check text-green margin-right-xs"></text>
      已记录需求，有新品会通知您
    </view>

    <view class="no-result-tips margin-top-lg">
      <view class="text-sm text-gray">您可以尝试：</view>
      <view class="text-sm text-gray margin-top-xs">• 使用其他关键词搜索</view>
      <view class="text-sm text-gray margin-top-xs">• 浏览商品分类</view>
      <view class="text-sm text-gray margin-top-xs">• 咨询AI助手获取推荐</view>
    </view>
  </view>

  <!-- 正常商品列表 -->
  <view wx:if="{{!noResult}}">
    <view wx:if="{{viewType}}">
      <goods-card goodsList="{{goodsList}}"/>
    </view>
    <view wx:if="{{!viewType}}">
      <goods-row goodsList="{{goodsList}}"/>
    </view>
    <view class="cu-load bg-gray {{loadmore?'loading':'over'}}"></view>
  </view>
</view>