/* 阶梯定价计算器页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 产品信息卡片 */
.product-card {
  display: flex;
  gap: 24rpx;
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 12rpx;
}

.product-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.product-base-price {
  font-size: 26rpx;
  color: #999;
}

/* 价格显示区 */
.price-display {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 50rpx 30rpx;
  text-align: center;
  color: #fff;
  margin-bottom: 20rpx;
}

.price-label {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 12rpx;
}

.price-value {
  display: block;
  font-size: 72rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.price-unit {
  display: block;
  font-size: 28rpx;
  opacity: 0.85;
}

.discount-badge {
  display: inline-block;
  padding: 10rpx 28rpx;
  background: #ffd700;
  color: #333;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 600;
  margin-top: 20rpx;
}

/* 数量选择区 */
.quantity-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.quantity-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.qty-btn {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: #fff;
  border: 2rpx solid #e0e0e0;
  font-size: 44rpx;
  color: #667eea;
  display: flex;
  align-items: center;
  justify-content: center;
}

.qty-btn:active {
  background: #667eea;
  color: #fff;
  border-color: #667eea;
}

.qty-btn.disabled {
  opacity: 0.3;
}

.qty-input {
  width: 200rpx;
  padding: 20rpx;
  border: 4rpx solid #667eea;
  border-radius: 16rpx;
  font-size: 44rpx;
  font-weight: 700;
  text-align: center;
  color: #667eea;
}

/* 阶梯价格表 */
.tier-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.tier-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.tier-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.tier-item.active {
  background: rgba(102, 126, 234, 0.1);
  border-color: #667eea;
}

.tier-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tier-label {
  font-size: 28rpx;
  color: #666;
}

.tier-item.active .tier-label {
  color: #667eea;
  font-weight: 600;
}

.tier-range {
  font-size: 24rpx;
  color: #999;
}

.tier-price-wrap {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tier-price {
  font-size: 34rpx;
  font-weight: 700;
  color: #ff4d4f;
}

.tier-save {
  font-size: 22rpx;
  color: #52c41a;
  background: #f6ffed;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* 提示信息 */
.tips-card {
  display: flex;
  gap: 16rpx;
  margin: 20rpx 30rpx;
  padding: 24rpx;
  background: rgba(24, 144, 255, 0.1);
  border-radius: 16rpx;
}

.tips-icon {
  font-size: 36rpx;
  flex-shrink: 0;
}

.tips-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tips-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #1890ff;
}

.tips-item {
  font-size: 24rpx;
  color: #1890ff;
  line-height: 1.6;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.action-btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
}

.btn-cart {
  background: #fff;
  border: 2rpx solid #667eea;
  color: #667eea;
}

.btn-buy {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
}

.action-btn::after {
  border: none;
}
