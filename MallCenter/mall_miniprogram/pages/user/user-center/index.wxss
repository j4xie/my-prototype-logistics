/**index.wxss**/
page{
  background-color:#f3f4f7 !important;
}

.order-list{
  margin: auto;
  border-radius: 40rpx;
  background-color: white;
}

.order-list-2{
  background-image: linear-gradient(#fff, #f3f4f7);
}

.order-image{
  width: 80rpx;
  height: 80rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.address{
  margin-top: 60rpx !important;
}

.address-image{
  width: 100rpx;
  height: 100rpx;
}

.head {
  margin: auto;
  box-shadow: 0rpx 0rpx 50rpx 10rpx rgba(211, 211, 211, 0.5);
}

.titles-color{
  color:rgb(107, 107, 107);
}

.text-black{
  color: #000 !important;
}

/* 商家工作台卡片 - 黑金风格 */
.merchant-card {
  margin: 30rpx;
  background: linear-gradient(135deg, #2c3e50 0%, #1a1a1a 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.merchant-card-active {
  opacity: 0.9;
  transform: scale(0.98);
}

.merchant-card-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
  z-index: 1;
}

.merchant-card-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(212, 175, 55, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(212, 175, 55, 0.3);
}

.merchant-card-icon text {
  font-size: 48rpx;
  color: #D4AF37;
}

.merchant-card-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.merchant-card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #D4AF37;
}

.merchant-card-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.merchant-card-arrow {
  z-index: 1;
}

.merchant-card-arrow text {
  font-size: 40rpx;
  color: #D4AF37;
}

.merchant-card-watermark {
  position: absolute;
  right: -20rpx;
  bottom: -30rpx;
  font-size: 80rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.03);
  letter-spacing: 4rpx;
  pointer-events: none;
}

/* 退出登录按钮 */
.logout-section {
  margin: 60rpx 30rpx 30rpx 30rpx;
}

.logout-btn {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  border-color: #e54d42 !important;
  color: #e54d42 !important;
  background-color: #fff !important;
}

.logout-btn::after {
  border-color: #e54d42 !important;
}

/* 登录按钮 - 金色风格 */
.login-btn {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  background: linear-gradient(135deg, #D4AF37 0%, #B8962E 100%) !important;
  color: #fff !important;
  border: none !important;
}

.bg-gold {
  background: linear-gradient(135deg, #D4AF37 0%, #B8962E 100%) !important;
}

/* 未登录提示区域 */
.not-logged-in-tips {
  margin: 30rpx;
}

.tip-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.tip-text {
  color: #666;
  font-size: 28rpx;
}