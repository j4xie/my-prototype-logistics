<view class="goods-container">
  <view class="goods-box" wx:for="{{goodsList}}" wx:key="index"
        data-product="{{item}}" bindtap="onProductTap">
    <view class="text-black margin-top text-bold padding-lr overflow-1">{{item.name}}</view>
    <view class="goods-box-img-box">
      <image src="{{item.picUrls[0] ? item.picUrls[0] : '/public/img/no_pic.png'}}" class="margin-top-xs" binderror="onImageError" data-index="{{index}}"/>
    </view>
    <view class="text-center margin-top">
      <!-- 已登录显示价格 -->
      <view wx:if="{{isLoggedIn}}" class="cu-tag line-black round text-df text-price text-bold text-black">{{item.salesPrice}}</view>
      <!-- 未登录显示登录提示 -->
      <view wx:else class="price-login-hint" catchtap="goToLogin">登录查看价格</view>
      <view class="text-gray text-sm padding-lr-sm margin-top-sm">已售{{item.saleNum}}</view>
    </view>
  </view>
</view>