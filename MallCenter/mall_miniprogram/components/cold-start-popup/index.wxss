/* 遮罩层 */
.cold-start-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 弹窗主体 */
.cold-start-popup {
  width: 90%;
  max-width: 640rpx;
  background-color: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 头部区域 */
.popup-header {
  padding: 40rpx 30rpx 30rpx;
  text-align: center;
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
  color: #fff;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.popup-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: 24rpx;
}

/* 步骤指示器 */
.step-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.step {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.step.active {
  background-color: #fff;
  color: #52c41a;
}

.step-line {
  width: 60rpx;
  height: 4rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

.step-line.active {
  background-color: #fff;
}

/* 内容区域 */
.popup-content {
  padding: 30rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  text-align: center;
}

/* 分类网格 */
.category-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  justify-content: center;
}

.category-item {
  width: calc(33.33% - 14rpx);
  background-color: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx 10rpx;
  text-align: center;
  position: relative;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.category-item.selected {
  background-color: #d7f0db;
  border-color: #52c41a;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.check-icon {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: #52c41a;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}

/* 价格区间列表 */
.price-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.price-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.price-item.selected {
  background-color: #d7f0db;
  border-color: #52c41a;
}

.price-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.price-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.price-desc {
  font-size: 24rpx;
  color: #999;
}

.radio-icon {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ddd;
  border-radius: 50%;
  transition: all 0.2s ease;
}

.radio-icon.checked {
  border-color: #52c41a;
  background-color: #52c41a;
  position: relative;
}

.radio-icon.checked::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 16rpx;
  height: 16rpx;
  background-color: #fff;
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

/* 底部按钮区域 */
.popup-footer {
  padding: 20rpx 30rpx 40rpx;
  border-top: 1rpx solid #eee;
}

.footer-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-skip,
.btn-prev {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  background-color: #f0f0f0;
}

.btn-next,
.btn-complete {
  flex: 2;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
  background: linear-gradient(135deg, #52c41a 0%, #389e0d 100%);
}

.btn-complete.disabled {
  opacity: 0.6;
}
