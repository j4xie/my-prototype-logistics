{
  "name": "web-app-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:stable": "next dev --port 3000 --hostname localhost",
    "dev:safe": "next dev --port 3000 --no-open",
    "dev:no-turbo": "next dev --port 3000",
    "dev:poll": "next dev --port 3000 --experimental-polling",
    "dev:debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "dev:mock": "cross-env NEXT_PUBLIC_MOCK_ENABLED=true next dev",
    "dev:real": "cross-env NEXT_PUBLIC_MOCK_ENABLED=false next dev",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "start": "next start",
    "type-check": "tsc --noEmit --incremental",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "cross-env NODE_OPTIONS='--max-old-space-size=8192' jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_OPTIONS='--max-old-space-size=4096' jest --watch --maxWorkers=1",
    "test:coverage": "cross-env NODE_OPTIONS='--max-old-space-size=8192' jest --coverage --detectOpenHandles --forceExit",
    "test:ci": "cross-env NODE_OPTIONS='--max-old-space-size=8192' jest --ci --coverage --watchAll=false --detectOpenHandles --forceExit",
    "test:single": "cross-env NODE_OPTIONS='--max-old-space-size=4096' jest --detectOpenHandles --forceExit --testNamePattern",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "analyze": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next out dist",
    "prepare": "husky install",
    "mock:dev": "tsx scripts/dev/mock-dev-tools.ts",
    "mock:status": "tsx scripts/dev/mock-dev-tools.ts --status",
    "mock:handlers": "tsx scripts/dev/mock-dev-tools.ts --handlers",
    "mock:validate": "tsx scripts/dev/mock-dev-tools.ts --validate",
    "env:list": "tsx scripts/dev/environment-adapter.ts --list",
    "env:status": "tsx scripts/dev/environment-adapter.ts --status",
    "env:apply": "tsx scripts/dev/environment-adapter.ts --apply",
    "env:validate": "tsx scripts/dev/environment-adapter.ts --validate"
  },
  "dependencies": {
    "@radix-ui/react-progress": "^1.1.7",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-query": "^5.77.2",
    "@tanstack/react-query-devtools": "^5.77.2",
    "@tanstack/react-table": "^8.21.3",
    "@tiptap/extension-collaboration": "^2.9.1",
    "@tiptap/extension-collaboration-cursor": "^2.9.1",
    "@types/glob": "^8.1.0",
    "@types/node-fetch": "^2.6.12",
    "@types/ws": "^8.18.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "glob": "^11.0.2",
    "lucide-react": "^0.515.0",
    "next": "15.3.2",
    "node-fetch": "^3.3.2",
    "playwright": "^1.53.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io-client": "^4.7.5",
    "tailwind-merge": "^3.3.0",
    "whatwg-fetch": "^3.6.20",
    "ws": "^8.18.2",
    "y-protocols": "^1.0.6",
    "y-websocket": "^2.0.4",
    "yjs": "^13.6.19",
    "zod": "^3.25.50",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@faker-js/faker": "^9.8.0",
    "@next/bundle-analyzer": "^15.3.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "buffer": "^6.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^15.5.2",
    "msw": "^2.9.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5",
    "undici": "^7.10.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
