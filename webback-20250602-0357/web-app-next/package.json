{
  "name": "web-app-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "dev:debug": "cross-env NODE_OPTIONS='--inspect' next dev --turbo",
    "build": "next build",
    "build:analyze": "cross-env ANALYZE=true next build",
    "start": "next start",
    "type-check": "tsc --noEmit --incremental",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test": "cross-env NODE_OPTIONS='--max-old-space-size=8192' jest --detectOpenHandles --forceExit",
    "test:watch": "cross-env NODE_OPTIONS='--max-old-space-size=4096' jest --watch --maxWorkers=1",
    "test:coverage": "cross-env NODE_OPTIONS='--max-old-space-size=8192' jest --coverage --detectOpenHandles --forceExit",
    "test:ci": "cross-env NODE_OPTIONS='--max-old-space-size=8192' jest --ci --coverage --watchAll=false --detectOpenHandles --forceExit",
    "test:single": "cross-env NODE_OPTIONS='--max-old-space-size=4096' jest --detectOpenHandles --forceExit --testNamePattern",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "analyze": "cross-env ANALYZE=true npm run build",
    "clean": "rm -rf .next out dist",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-query": "^5.77.2",
    "@tanstack/react-query-devtools": "^5.77.2",
    "@tanstack/react-table": "^8.21.3",
    "@tiptap/extension-collaboration": "^2.9.1",
    "@tiptap/extension-collaboration-cursor": "^2.9.1",
    "@types/ws": "^8.18.1",
    "clsx": "^2.1.1",
    "next": "15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io-client": "^4.7.5",
    "tailwind-merge": "^3.3.0",
    "ws": "^8.18.2",
    "y-protocols": "^1.0.6",
    "y-websocket": "^2.0.4",
    "yjs": "^13.6.19",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^15.3.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
