{
  "name": "heiniu-integration-tests",
  "version": "1.0.0",
  "description": "白垩纪食品溯源系统 - 前后端集成测试套件",
  "type": "module",
  "main": "run-integration-tests.js",
  "scripts": {
    "test": "node run-integration-tests.js",
    "test:auth": "node scenarios/auth-flow.test.js",
    "test:permission": "node scenarios/permission.test.js",
    "test:business": "node scenarios/business-flow.test.js",
    "test:sync": "node scenarios/data-sync.test.js",
    "test:network": "node scenarios/network-error.test.js",
    "test:performance": "node performance/performance.test.js",
    "test:quick": "node run-integration-tests.js --skip-env --skip-data",
    "test:core": "node run-integration-tests.js --suite=auth,permission",
    "setup": "npm install",
    "env:start": "node setup/test-environment.js",
    "data:init": "node setup/test-data-init.js",
    "clean": "rm -rf reports/*.html reports/*.json"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "ora": "^6.3.1",
    "node-fetch": "^3.3.2",
    "chai": "^4.3.10"
  },
  "devDependencies": {
    "@types/node": "^20.10.0"
  },
  "keywords": [
    "integration-test",
    "e2e-test",
    "react-native",
    "nodejs",
    "api-testing"
  ],
  "author": "白垩纪食品溯源系统团队",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  }
}