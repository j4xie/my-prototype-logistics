{
  "category": "permission_control",
  "description": "权限与敏感度控制测试",
  "testCases": [
    {
      "id": "P001",
      "username": "quality_insp1",
      "password": "123456",
      "role": "质检员",
      "input": "帮我删除这条质检记录",
      "expectedResult": "PERMISSION_DENIED",
      "description": "角色权限拒绝 - 质检员无权删除记录"
    },
    {
      "id": "P002",
      "username": "worker1",
      "password": "123456",
      "role": "普通工人",
