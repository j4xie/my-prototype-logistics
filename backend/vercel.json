{
  "version": 2,
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/favicon\\.(ico|png)",
      "status": 404
    },
    {
      "src": "/api/(.*)",
      "dest": "src/index.js"
    },
    {
      "src": "/health",
      "dest": "src/index.js"
    },
    {
      "src": "/",
      "dest": "src/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "CORS_ORIGIN": "https://my-prototype-logistics.vercel.app",
    "DATABASE_URL": "mysql://root:temporary_password@your_db_host:3306/heiniu_db",
    "JWT_SECRET": "your-super-secret-jwt-key-here",
    "JWT_EXPIRES_IN": "7d"
  }
}
